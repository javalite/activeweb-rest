extends ../../_layout

block active
    - sidebar_active = 'form-imagecrop.html'

block content
    .content-heading
        div
            | Image Cropper
            small Simple image cropping plugin.

    .container-md
        .row
            .col-xl-8
                .img-container.mb-3
                    img(src='img/mb-sample.jpg', alt='Picture')
            .col-xl-4
                .docs-preview.clearfix
                    .img-preview.preview-lg
                    .img-preview.preview-md
                    .img-preview.preview-sm
                    .img-preview.preview-xs
        .row.mt-2
            .col-xl-4
                .mb-2.btn-group
                    button.btn.btn-info(data-method='setDragMode', data-option='move', type='button', title='Move')
                        span(data-toggle='tooltip', title='$().cropper("setDragMode", "move")')
                            span.fas.fa-arrows-alt
                    button.btn.btn-info(data-method='setDragMode', data-option='crop', type='button', title='Crop')
                        span(data-toggle='tooltip', title='$().cropper("setDragMode", "crop")')
                            span.fa.fa-crop
                    button.btn.btn-info(data-method='zoom', data-option='0.1', type='button', title='Zoom In')
                        span(data-toggle='tooltip', title='$().cropper("zoom", 0.1)')
                            span.fa.fa-plus-square
                    button.btn.btn-info(data-method='zoom', data-option='-0.1', type='button', title='Zoom Out')
                        span(data-toggle='tooltip', title='$().cropper("zoom", -0.1)')
                            span.fa.fa-minus-square
                    button.btn.btn-info(data-method='rotate', data-option='-45', type='button', title='Rotate Left')
                        span(data-toggle='tooltip', title='$().cropper("rotate", -45)')
                            span.fa.fa-arrow-left
                    button.btn.btn-info(data-method='rotate', data-option='45', type='button', title='Rotate Right')
                        span(data-toggle='tooltip', title='$().cropper("rotate", 45)')
                            span.fa.fa-arrow-right
                .mb-2.btn-group
                    button.btn.btn-info(data-method='crop', type='button', title='Crop')
                        span(data-toggle='tooltip', title='$().cropper("crop")')
                            span.fa.fa-check
                    button.btn.btn-info(data-method='clear', type='button', title='Clear')
                        span(data-toggle='tooltip', title='$().cropper("clear")')
                            span.fa.fa-times
                    button.btn.btn-info(data-method='disable', type='button', title='Disable')
                        span(data-toggle='tooltip', title='$().cropper("disable")')
                            span.fa.fa-lock
                    button.btn.btn-info(data-method='enable', type='button', title='Enable')
                        span(data-toggle='tooltip', title='$().cropper("enable")')
                            span.fa.fa-unlock
                    button.btn.btn-info(data-method='reset', type='button', title='Reset')
                        span(data-toggle='tooltip', title='$().cropper("reset")')
                            span.fas.fa-sync
                    label.btn.btn-info.mb-0(for='inputImage', title='Upload image file')
                        input#inputImage.sr-only(name='file', type='file', accept='image/*')
                        span(data-toggle='tooltip', title='Import image with Blob URLs')
                            span.fa.fa-upload
                    //- button.btn.btn-info(data-method='destroy', type='button', title='Destroy')
                    //-   span(data-toggle='tooltip', title='$().cropper("destroy")')
                    //-     span.fa.fa-power-off
            .col-xl-4
                .mb-2.btn-group.d-flex.btn-group-sm(data-toggle='buttons')
                    label.w-100.mb-0.btn.btn-info.active(data-method='setAspectRatio', data-option='1.7777777777777777', title='Set Aspect Ratio')
                        input#aspestRatio1.sr-only(name='aspestRatio', value='1.7777777777777777', type='radio')
                        span(data-toggle='tooltip', title='$().cropper("setAspectRatio", 16 / 9)') 16:9
                    label.w-100.mb-0.btn.btn-info(data-method='setAspectRatio', data-option='1.3333333333333333', title='Set Aspect Ratio')
                        input#aspestRatio2.sr-only(name='aspestRatio', value='1.3333333333333333', type='radio')
                        span(data-toggle='tooltip', title='$().cropper("setAspectRatio", 4 / 3)') 4:3
                    label.w-100.mb-0.btn.btn-info(data-method='setAspectRatio', data-option='1', title='Set Aspect Ratio')
                        input#aspestRatio3.sr-only(name='aspestRatio', value='1', type='radio')
                        span(data-toggle='tooltip', title='$().cropper("setAspectRatio", 1 / 1)') 1:1
                    label.w-100.mb-0.btn.btn-info(data-method='setAspectRatio', data-option='0.6666666666666666', title='Set Aspect Ratio')
                        input#aspestRatio4.sr-only(name='aspestRatio', value='0.6666666666666666', type='radio')
                        span(data-toggle='tooltip', title='$().cropper("setAspectRatio", 2 / 3)') 2:3
                    label.w-100.mb-0.btn.btn-info(data-method='setAspectRatio', data-option='NaN', title='Set Aspect Ratio')
                        input#aspestRatio5.sr-only(name='aspestRatio', value='NaN', type='radio')
                        span(data-toggle='tooltip', title='$().cropper("setAspectRatio", NaN)') Free
