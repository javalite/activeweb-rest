extends ../../_layout

block active
    - sidebar_active = 'mailbox.html'

block content
    .content-heading MailBox

    .row
        .col-xl-3.col-lg-4
            .d-flex.mb-2
                a.btn.btn-purple.btn-sm.mb-compose-button(href="#")
                    em.fas.fa-pencil-alt
                    span Compose
                button.btn.btn-sm.btn-secondary.mb-toggle-button.ml-auto(type="button", data-toggle="collapse", data-target=".mb-boxes")
                    em.fa.fa-bars.fa-fw.fa-lg
            // START mailbox list
            .mb-boxes.collapse.show
                .card.card-default
                    .card-body
                        ul.nav.nav-pills.flex-column
                            li.nav-item.p-2
                                small.text-muted MAILBOXES
                            li.nav-item.active
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.fa.fa-inbox.mr-2
                                    span Inbox
                                    span.ml-auto.badge.badge-green 42
                            li.nav-item
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.fa.fa-star.mr-2
                                    span Starred
                                    span.ml-auto.badge.badge-green 10
                            li.nav-item
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.far.fa-paper-plane.mr-2
                                    span Sent
                                    span.ml-auto.badge.badge-green 0
                            li.nav-item
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.fa.fa-edit.mr-2
                                    span Draft
                                    span.ml-auto.badge.badge-green 5
                            li
                                a.nav-link(href="#").d-flex.align-items-center
                                    em.fa-fw.fa-lg.fas.fa-trash-alt.mr-2
                                    span Trash
                                    span.ml-auto.badge.badge-green 0
                            li.p-2.nav-item
                                small.text-muted LABELS
                            li.nav-item
                                a.py-1(href='#').nav-link
                                    span.circle.bg-danger
                                    span Red
                            li.nav-item
                                a.py-1(href='#').nav-link
                                    span.circle.bg-pink
                                    span Pink
                            li.nav-item
                                a.py-1(href='#').nav-link
                                    span.circle.bg-info
                                    span Blue
                            li.nav-item
                                a.py-1(href='#').nav-link
                                    span.circle.bg-warning
                                    span Yellow

                // END mailbox list

        .col-xl-9.col-lg-8
